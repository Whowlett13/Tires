<style lang="scss">
  .imgContainer{
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 15px;
  
  }
  .imgContainer img{
    width: 100%;
    height: auto;
    border-radius: 5%;
  }
  .gitHub{
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
    padding-bottom: 100px;
  }

  .repo-card {
    display: block;
    text-decoration: none;
    padding: 1.75rem;
    background: var(--gradient-subtle);
    border: 2.5px solid var(--accent-regular);
    box-shadow: var(--shadow-sm);
    border-radius: 1rem;
    transition: var(--theme-transition);

    &:hover {
      box-shadow: var(--shadow-md);
      border: 2.5px solid var(--accent-dark);
      filter: brightness(1.1);
      transform: translateY(-0.5rem);
    }

    &__header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding-bottom: 10px;
    }

    &__title {
      align-items: center;
      justify-content: center;
      font-size: var(--text-xl);
      padding-bottom: 50px;
    }

    &__description {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0.8rem 0;
      color: var(--gray-200);

      --max-lines: 3;
      overflow: hidden;

      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: var(--max-lines);

      @media only screen and (min-width: 50em) {
        min-height: 4.5rem;
      }
    }

    &__footer {
      display: flex;
      align-items: center;
      gap: 0.75rem;

      &-language {
        color: var(--gray-200);
        font-weight: bold;
      }

      &-lang-color {
        width: 1.25rem;
        height: 1.25rem;
        border-radius: 50%;
      }
    }
  }
</style>
