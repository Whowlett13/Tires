---
import BaseLayout from "../layouts/BaseLayout.astro";
import Link from "../components/ui/link.astro";
import Icon from "../components/ui/Icon.astro";
import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
import Skills from "../components/Skills.astro";
---

<BaseLayout
  title="Contact | Wyatt Howlett"
  description="Contact page of Wyatt Howlett's portfolio."
>
  <div class="stack gap-20">
    <header class="wrapper hero">
      <div class="hero-content">
        <Hero
          align="center"
          title="Contact me"
          tagline="Want to work together? I'd love to hear from you."
        />
        <Link
          class="link"
          href="https://docs.google.com/document/d/1TNpZB1rjlTciLxNHSLesJ0nE8UuEaYy7FyJVlgQ0564/edit?pli=1"
          style="rounded"
          external
        >
          <Icon icon="readCV" size="1.33em" /> View Resume
        </Link>
      </div>
      <img
        alt="illustration of a men coding web projects"
        src="/assets/demo-img.jpg1.png"
      />
      
    </header>
    

    <main class="wrapper stack gap-10">
      <Skills />
      <ContactCTA />
    </main>
  </div>
</BaseLayout>

<style lang="scss">
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-inline: 2.5rem;
    gap: 1.5rem;

    img {
      width: 100%;
      max-width: 22rem;
      border-radius: 10%;
    }

    .link {
      width: fit-content;
      margin: 1rem auto;
    }
  }

  @media (min-width: 50em) {
    .hero {
      flex-direction: row;
      gap: 6rem;
    }
  }
</style>
